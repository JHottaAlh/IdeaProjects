<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
           http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
           version="3.0">

	<filter-mapping>
		<filter-name>
			EncodingFilter
		</filter-name>
		<url-pattern>
			/*
		</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>
			LoginAccessFilter
		</filter-name>
		<url-pattern>
			/*
		</url-pattern>
	</filter-mapping>
	
	<filter-mapping>
		<filter-name>
			AuthorityFilter
		</filter-name>
		<url-pattern>
			/useredit, /usercontrol, /userControl.jsp, /userEdit.jsp, /signup, /signup.jsp
		</url-pattern>
	</filter-mapping>


</web-app>